
<% if (error_msg != '') { %> 
    <script type="text/javascript">

        $(document).ready(function() {
        let err_msg = "<%= error_msg %>"
            toastr.options.timeOut = 1500;
            
            toastr.error(err_msg);
        });
    </script>

 <% } %>
 

<% if (success_msg != '') { %> 
    <script type="text/javascript">

        $(document).ready(function() {
        let scs = "<%= success_msg %>"
            toastr.options.timeOut = 1500;
            
            toastr.success(scs);
        });
    </script>

 <% } %>

 

 <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => {  %>
 
  
  <script type="text/javascript">

    $(document).ready(function() {
    let err = "<%= error.msg %>"
        toastr.options.timeOut = 1500;
        
        toastr.error(err);
    });
  </script>
  
  <% }) %> <% } %>
